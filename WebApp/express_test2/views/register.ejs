<body>
  <div class="wrapper">
  <form class="login" method="post" action="/register" name="registration">
    <p class="title" >Register </p>
    <input type="text" placeholder="Username" name="username"autofocus/>
    <i class="fa fa-user"></i>
    <input type="password" placeholder="Password" name="pwd"/>
    <i class="fa fa-key"></i>
    <input type="password" placeholder="ReEnter Password" name="re_pwd"/>
    <i class="fa fa-key"></i>
    <input type="text" placeholder="Fullname" name="fullName" autofocus/>
    <i class="fa fa-user"></i>
    <input type="email" placeholder="Email" name="email" />
    <i class="fa fa-envelope"></i>
    <input  type="password" placeholder="PhoneNo" name="phoneNo"/>
    <i class="fa fa-phone"></i>

	<input class="profile-pic" type="file" name="pic" accept="image/*">
 <div id="errors">

 </div>
    <button type="submit">
      <i class="spinner"></i>
      <span class="state">Register</span>
    </button>
